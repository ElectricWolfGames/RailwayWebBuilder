<Window x:Class="RailwayWebBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RailwayWebBuilder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Create Basic Page" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="126" Click="Button_Click" />
        <Button Name ="Build" Content="Build" HorizontalAlignment="Left" Margin="247,10,0,0" VerticalAlignment="Top" Width="75" Click="Build_Click" />
        <Button Name ="OpenSite" Content="Site" HorizontalAlignment="Left" Margin="698,10,0,0" VerticalAlignment="Top" Width="75" Click="Site_Click" />
        <Button Name ="OpenLiveSite" Content="Live Site" HorizontalAlignment="Left" Margin="698,35,0,0" VerticalAlignment="Top" Width="75" Click="LiveSite_Click" />
        <Button x:Name ="TestBuild" Content="Test Build" HorizontalAlignment="Left" Margin="247,52,0,0" VerticalAlignment="Top" Width="75" Click="BuildTest_Click" />
        <Button Content="TEST!" HorizontalAlignment="Left" Margin="76,201,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" />
    </Grid>
</Window>
